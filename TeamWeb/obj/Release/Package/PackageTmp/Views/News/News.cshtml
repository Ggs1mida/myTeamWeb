    <script>
        function show() {
            var url = '@Url.Action("List","News")';
            $.post(url, function (response) {
                //alert(response);
                var dataset = eval("(" + response + ")");
                var content = "";
                var pageurl = "";
                for (var i = 0; i <= dataset.length - 1; i++) {
                    pageurl = '@Url.Content("http://egov.jinyuc.com/teamweb/common/staticpage/")' + dataset[i].name;
                    content += "<li><a href=" + pageurl+ ">" + dataset[i].title + "<span>" + dataset[i].time + "</span></a></li>";
                }
                $(".blog-cont").html(content);
            })
        }
    </script>
    <style>
        .news-contaier {
            padding-left: 10%;
            padding-right: 10%;
        }
        .blog{
            border:2px solid #383d61
        } 
        .blog li{
            border-bottom:1px dashed #000000;
        }   
        .blog span{
            float:right;
        }
    </style>
